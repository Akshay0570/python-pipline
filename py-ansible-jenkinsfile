pipeline{
    agent{label 'java'}
    stages{
        stage('source-code-management'){
            steps{
               git branch: 'main', url: 'https://github.com/Akshay0570/python-pipline.git'
            }
        }
        stage('ansible-playbook'){
            steps{
                ansiblePlaybook become: true, disableHostKeyChecking: true, installation: 'Ansible', inventory: 'hosts', playbook: 'python.yaml'
            }
        }
    }
}